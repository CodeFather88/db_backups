generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Database {
  id               String          @id @default(uuid())
  name             String
  type             DbType
  host             String
  port             Int
  username         String
  password         String
  databaseName     String
  backupInterval  BackupInterval
  enabled          Boolean         @default(true)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  @@map("databases")
}

enum DbType {
  postgresql
  mongo
}

enum BackupInterval {
  DAILY     // каждый день
  HOURLY    // каждый час
  WEEKLY    // раз в неделю
  CUSTOM    // кастомная логика (например, через cron)
}
